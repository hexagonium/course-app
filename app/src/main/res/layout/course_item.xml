<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="25dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/course_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/course_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_java" />


            <TextView
                android:id="@+id/course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_img"
                android:layout_alignStart="@id/course_img"
                android:layout_alignEnd="@id/course_img"
                android:layout_margin="12dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Название курса"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_title"
                android:layout_alignStart="@+id/course_title"
                android:layout_marginStart="28dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/course_tv_start_course"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignEnd="@+id/course_title"
                android:layout_alignBottom="@+id/textView4"
                android:layout_gravity="center"
                android:layout_marginEnd="28dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/course_tv_level"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/course_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_alignEnd="@+id/textView4"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Дата"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/course_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_alignEnd="@+id/textView5"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Уровень:"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>